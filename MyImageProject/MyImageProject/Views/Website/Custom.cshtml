@using Microsoft.AspNetCore.Mvc.Rendering;
@model MyImageProject.Models.UploadViewModel

@{
	Layout = "/Views/Shared/WebLayout.cshtml";

}

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col">
                <p class="bread"><span><a asp-action="Index" asp-controller="Website">Home</a></span> / <span>Contact</span></p>
            </div>
        </div>
    </div>
</div>


<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-9">
            <div class="card justify-content-center shadow mb-5 bg-white rounded">
                <div class="card-header">
                    <h3 style="padding-inline-start: 18rem; margin: 0">CUSTOMIZATION</h3>
                </div>
                <div class="card-body">
                    <form enctype="multipart/form-data" asp-action="Upload">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="SelectedSizeId" class="control-label"></label>
                                        <select asp-for="SelectedSizeId" class="form-control text-center" id="selectedsizeid" required>
                                            <option selected disabled> -- Select Size -- </option>
                                            <option value="1">X-Samll</option>
                                            <option value="2">Samll</option>
                                            <option value="3">Medium</option>
                                            <option value="4">Large</option>
                                            <option value="5">XX-Large</option>
                                        </select>
                                        <span asp-validation-for="SelectedSizeId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="price" class="form-label">Price:</label>
                                        <input type="text" class="form-control" id="priceDisplay" readonly>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Image" class="form-label">Upload Image (JPG only):</label>
                                        <input asp-for="Image" type="file" class="form-control" id="Image" name="Image" accept="Image/jpeg" required />
                                        <span asp-validation-for="Image" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Quantity">Quantity:</label>
                                        <input asp-for="Quantity" type="number" class="form-control" id="Quantity" name="Quantity" min="1" />
                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6" style="margin-top: 10px;">
                                    <button type="submit"  class="btn btn-primary" style="padding: 10px 200px; margin: 0; text-align: center;">Add to Cart</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



