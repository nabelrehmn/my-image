
@{
    Layout = "/Views/Shared/WebLayout.cshtml";

}

<div id="page">
	<aside id="colorlib-hero">
		<div class="flexslider">
			<ul class="slides">
				<li style="background-image: url(assets/web/images/art-sea.jpg);">
					<div class="overlay"></div>
					<div class="container-fluid">
						<div class="row">
							<div class="col-sm-6 offset-sm-3 text-center slider-text">
								<div class="slider-text-inner">
									<div class="desc">
										<h1 class="head-1">New</h1>
										<h2 class="head-2">Art</h2>
										<h2 class="head-3">Collection</h2>
										<p class="category"><span>customize your own</span></p>
										<p><a asp-action="Gallery" asp-controller="Website" class="btn btn-primary">Check Collection</a></p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</li>
			</ul>
		</div>
	</aside>
	<div class="colorlib-intro">
		<div class="container">
			<div class="row">
				<div class="col-sm-12 text-center">
					<h2 class="intro">It all began with a simple vision: Create high-quality, beautifully designed digital and paint prints that we would be proud to showcase in our own spaces.</h2>
				</div>
			</div>
		</div>
	</div>
	<div class="colorlib-product">
		<div class="container-fluid">
			<div class="row">
				<div class="col-sm-6 text-center">
					<div class="featured">
						<a class="featured-img" style="background-image: url(assets/web/images/digital-art.jpeg);"></a>
						<div class="desc">
							<h2><a asp-action="Gallery" asp-controller="Website">Digital Art Collection</a></h2>
						</div>
					</div>
				</div>
				<div class="col-sm-6 text-center">
					<div class="featured">
						<a class="featured-img" style="background-image: url(assets/web/images/paint-art.jpg);"></a>
						<div class="desc">
							<h2><a asp-action="Gallery" asp-controller="Website">Paint Art Collection</a></h2>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="colorlib-product">
		<div class="container">
			<div class="row">
				<div class="col-sm-8 offset-sm-2 text-center colorlib-heading">
					<h2>Best Sellers</h2>
				</div>
			</div>
			<div class="row row-pb-md">
				@foreach (var item in Model)
				{
					<div class="col-lg-3 mb-4 text-center">
						<div class="product-entry border">
							<a asp-action="Gallery" asp-controller="Website" class="prod-img">
								<img src="@Url.Content("~/assets/web/images/" + item.Image)" style="width:253px; height:300px; class="img-fluid" alt="Free html5 bootstrap 4 template">
							</a>
							<div class="desc">
								<h2><a asp-action="Gallery" asp-controller="Website">@item.GalleryName</a></h2>
								<span class="price">@item.TotalPrice</span>
							</div>
						</div>
					</div>
				}
			</div>
			<div class="row">
				<div class="col-md-12 text-center">
					<p><a asp-action="Gallery" asp-controller="Website" class="btn btn-primary btn-lg">Shop All Designs</a></p>
				</div>
			</div>
		</div>
	</div>
	<div class="colorlib-partner">
		<div class="container">
			<div class="row">
				<div class="col-sm-8 offset-sm-2 text-center colorlib-heading colorlib-heading-sm">
					<h2>Trusted Partners</h2>
				</div>
			</div>
			<div class="row">
				<div class="col partner-col text-center">
					<img src="~/assets/web/images/brand-1.jpg" class="img-fluid" alt="Free html4 bootstrap 4 template">
				</div>
				<div class="col partner-col text-center">
					<img src="~/assets/web/images/brand-2.jpg" class="img-fluid" alt="Free html4 bootstrap 4 template">
				</div>
				<div class="col partner-col text-center">
					<img src="~/assets/web/images/brand-3.jpg" class="img-fluid" alt="Free html4 bootstrap 4 template">
				</div>
				<div class="col partner-col text-center">
					<img src="~/assets/web/images/brand-4.jpg" class="img-fluid" alt="Free html4 bootstrap 4 template">
				</div>
				<div class="col partner-col text-center">
					<img src="~/assets/web/images/brand-5.jpg" class="img-fluid" alt="Free html4 bootstrap 4 template">
				</div>
			</div>
		</div>
	</div>
</div>

<div class="gototop js-top">
	<a href="#" class="js-gotop"><i class="ion-ios-arrow-up"></i></a>
</div>
