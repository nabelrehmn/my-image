@model MyImageProject.Models.CartViewModel

@{
	Layout = "/Views/Shared/WebLayout.cshtml";

}

<div class="breadcrumbs">
	<div class="container">
		<div class="row">
			<div class="col">
				<p class="bread"><span><a asp-action="Index" asp-controller="Website">Home</a></span> / <span>Shopping Cart</span></p>
			</div>
		</div>
	</div>
</div>


<div class="colorlib-product">
	<div class="container">

        <h2>Your Cart</h2>

        @if (Model.CartItems.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Size</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td><img src="@Url.Content(item.Photographs.PhotoPath)" alt="Image" style="width: 100px; height: auto;" /></td>
                            <td>@item.PrintSizes.SizeName</td>
                            <td>@item.Quantity</td>
                            <td>@(item.Quantity * item.PrintSizes.Price)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <form asp-action="Checkout">
                <button type="submit" class="btn btn-primary">Proceed to Checkout</button>
            </form>
        }
        else
        {
            <p>Your cart is empty.</p>
        }
	</div>
</div>


